# NPM configuration for dependency resolution
# Use legacy peer deps to handle React 19 compatibility issues
legacy-peer-deps=true

# Optimasi untuk mengurangi ukuran node_modules
# Gunakan flat node_modules untuk mengurangi duplikasi
legacy-bundling=false
# Kurangi cache yang tidak diperlukan (gunakan cache hanya saat diperlukan)
prefer-offline=false
# Progress bar untuk monitoring
progress=true
# Kurangi logging yang tidak diperlukan (gunakan error atau warn)
loglevel=warn
# Gunakan package-lock.json untuk konsistensi
package-lock=true
# Jangan update package-lock.json secara otomatis
save-exact=false
# Kurangi audit yang tidak diperlukan saat install
audit=false
# Catatan: Untuk mengurangi ukuran node_modules, gunakan script remove-large-deps.js
# setelah install: npm run install:minimal

